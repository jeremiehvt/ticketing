{% extends "layout.html.twig" %}

{% block core %}
<div class="jumbotron jumbotron-fluid mb-0 bg-light">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12"><h2>formulaire </h2></div>
			<div class="col-12">
				{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

					{{ form_errors(form) }}

					{{form_label(form.email, 'votre email', {'label_attr': {'class':'col-12','id':'email','for': 'email'}})}}
					{{form_widget(form.email)}}

					{{form_label(form.numberOfPlaces, 'nombre de places', {'label_attr': {'class':'col-12','id':'places','for': 'places'}})}}
					{{form_widget(form.numberOfPlaces)}}

					{{form_label(form.visitDay, 'jours de visite', {'label_attr': {'class':'col-12','id':'visitdays','for': 'visitdays'}}) }}
					{{form_widget(form.visitDay)}}

					{{form_label(form.tycketsType, 'type de ticket', {'label_attr': {'class':'col-12','id':'type','for': 'type'}}) }}
					{{form_widget(form.tycketsType)}}

					<h5>Vos Billets</h5>

					<ul class="tickets" data-prototype="{{ form_widget(form.tickets.vars.prototype)|e('html_attr') }}"> 

						
					</ul>
					
					{#<a href="#" id="add_tickets" class="btn btn-primary">Ajouter un billet</a>#}

					

					{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
					

				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>
{% endblock %}