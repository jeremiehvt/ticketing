{% macro protoRow(form) %}

	<div class="form-group row col-12">
		{{form_label(form.name)}}
		
		{{form_widget(form.name)}}

		{{form_errors(form.name)}}
	</div>

	<div class="form-group row col-12">
		{{form_label(form.firstName)}}
		
			{{form_widget(form.firstName)}}
		
		{{form_errors(form.firstName)}}
	</div>

	<div class="form-group row col-12">
		{{form_label(form.birthday)}}
		
			{{form_widget(form.birthday.year, {'attr': {'class': 'form-control col-2 mr-2'}})}}
			{{form_widget(form.birthday.month, {'attr': {'class': 'form-control col-2 mr-2'}})}}
			{{form_widget(form.birthday.day, {'attr': {'class': 'form-control col-2 mr-2'}})}}
				
		{{form_errors(form.birthday)}}
	</div>

	<div class="form-group row col-12">
		{{form_label(form.reduction)}}
		
			{{form_widget(form.reduction)}}
		
		{{form_errors(form.reduction)}}
	</div>

	<div class="form-group row col-12">
		
		
			{{form_widget(form.country)}}
		
		{{form_errors(form.country)}}
	</div>
		
{% endmacro %}